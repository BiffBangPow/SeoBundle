<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="cmf_seo.form.type.seo_metadata" class="%cmf_seo.persistence.phpcr.class.metadata%">
            <tag name="form.type" alias="seo_metadata" />
        </service>
        <service id="cmf_seo.page" class="%cmf_seo.persistence.phpcr.class.presentation%">
            <argument type="service" id="sonata.seo.page" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="cmf_seo.form.type.seo_metadata" class="">
            <tag name="form.type" alias="seo_metadata" />
        </service>
        <service id="cmf_seo.event_lister.seo_content" class="%cmf_seo.persistence.phpcr.form_type.metadata%">
            <argument type="service" id="cmf_seo.page"/>
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest"/>
        </service>
    </services>

</container>
